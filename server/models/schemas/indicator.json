{
	"$schema": "http://json-schema.org/schema#",
	"title": "Monitool indicator schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"_id", "type", "name", "description",
		"geoAggregation", "timeAggregation", "unit", "types", "themes", "formulas"
	],
	"properties": {
		"_id":             { "$ref": "#/definitions/uuid" },
		"_rev":            { "$ref": "#/definitions/couchdb-revision" },
		"operation":       { "type": "string", "enum": ["parameter", "common", "recommended", "mandatory"] },
		"target": 		   { "type": "string", "enum": ["lower_is_better", "higher_is_better", "around_is_better", "non_relevant"] },
		"type":            { "type": "string", "pattern": "^indicator$" },
		"name":            { "type": "string", "minLength": 1 },
		"description":     { "type": "string", "minLength": 1 },
		"geoAggregation":  { "type": "string", "enum": ["none", "sum", "average"] },
		"timeAggregation": { "type": "string", "enum": ["none", "sum", "average"] },
		"unit":            { "type": "string", "enum": ["â€°", "%", ""] },

		"types": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/uuid"
			}
		},

		"themes": {
			"type": "array",
			"uniqueItems": true,
			"items": {
				"$ref": "#/definitions/uuid"
			}
		},

		"formulas": {
			"type": "object",
			"patternProperties": {
				"^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$": {
					"type": "object",
					"additionalProperties": false,

					"properties": {
						"name":       { "type": "string", "minLength": 3 },
						"expression": { "type": "string", "minLength": 1 },

						"parameters": {
							"type": "object",
							"additionalProperties": false,
							"patternProperties": {
								"^[a-zA-Z0-9_]+$": { "$ref": "#/definitions/uuid" }
							}
						}
					}
				}
			}
		}
	},
	"definitions": {
		"uuid": {
			"type": "string",
			"pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
		},
		"couchdb-revision": {
			"type": "string",
			"pattern": "^[0-9]+\\-[0-9a-f]{32}$"
		}
	}
}
