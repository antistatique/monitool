; CouchDB configuration file
; On a debian install, goes at /etc/couchdb/local.ini

[httpd]
port = 5984
bind_address = 0.0.0.0
WWW-Authenticate = Basic realm="***REMOVED***"

[couch_httpd_auth]
require_valid_user = true
users_db_public = true
public_fields = first_name, last_name, email

[query_server_config]
reduce_limit = false

[cors]
origins = *
credentials = true
methods = GET, PUT, POST, HEAD, DELETE
headers = accept, authorization, content-type, origin, referer

; Also add ***REMOVED*** user.